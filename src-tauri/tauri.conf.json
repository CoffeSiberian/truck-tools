{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "withGlobalTauri": true,
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "trucktools",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "all": true,
                "scope": ["$DOCUMENT/**"]
            },
            "path": {
                "all": true
            },
            "shell": {
                "execute": true,
                "sidecar": true,
                "open": true,
                "scope": [
                    {
                        "name": "bin/SII_Decrypt",
                        "sidecar": true,
                        "args": true
                    }
                ]
            },
            "protocol": {
                "all": false,
                "asset": true,
                "assetScope": ["$DOCUMENT/**"]
            }
        },
        "windows": [
            {
                "title": "trucktools",
                "width": 1280,
                "height": 720,
                "minWidth": 1280,
                "minHeight": 720,
                "resizable": true,
                "center": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "externalBin": ["bin/SII_Decrypt"]
        }
    }
}
